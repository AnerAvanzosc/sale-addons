<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record model="ir.ui.view" id="view_order_form">
         <field name="model">sale.order</field>
         <field name="inherit_id" ref="sale_order_line_containers.view_order_form" />
         <field name="arch" type="xml">
            <xpath
        expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='container']"
        position="before"
      >
                <field name="product_packaging" optional="show" string="Packaging" />
                <field name="package_qty" optional="show" />
            </xpath>
         </field>
     </record>
</odoo>
